{
  "$id": "settings.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Settings",
  "description": "Settings for Stereo 8 AAOS",
  "type": "object",
  "$ref": "#/definitions/SettingsType",
  "definitions": {
    "SettingsType": {
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "subsonic": {
          "$ref": "#/definitions/SubsonicSetting"
        },
        "radio": {
          "items": {
            "$ref": "#/definitions/RadioSetting"
          },
          "description": "Promos record",
          "type": "array"
        }
      },
      "required": ["subsonic", "radio"],
      "type": "object"
    },
    "SubsonicSetting": {
      "additionalProperties": false,
      "description": "Subsonic Settings",
      "properties": {
        "domain": {
          "description": "Subsonic URL ending with /rest/",
          "type": "string"
        },
        "user": {
          "description": "Username",
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["domain", "user", "password"],
      "type": "object"
    },
    "RadioSetting": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "channelUrl": {
          "type": "string"
        },
        "fallBackImageUrl": {
          "type": "string"
        },
        "schema": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "urls": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  },
                  "headers": {
                    "type": "object"
                  }
                },
                "required": ["name", "url"]
              }
            },
            "paths": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "tracks": {
                  "type": "string"
                },
                "broadcast": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "presenters": {
                      "type": "string"
                    },
                    "imageUrl": {
                      "type": "string"
                    }
                  }
                },
                "time": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "start": {
                      "type": "string"
                    },
                    "end": {
                      "type": "string"
                    }
                  }
                },
                "song": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "artist": {
                      "type": "string"
                    },
                    "imageUrl": {
                      "type": "string"
                    },
                    "listenUrl": {
                      "type": "string"
                    }
                  },
                  "required": ["artist", "title"]
                }
              }
            }
          }
        }
      },
      "required": ["name", "channelUrl", "fallBackImageUrl"],
      "type": "object"
    }
  }
}
